<div class="event-view">
  <div class="row">
{{!--  <div class="col-xs-12">
      <a href="/" class="text-left"> &lt; Today </a>
      <a href="#" class="text-right">Edit</a>
    </div> --}}

    <div class="col-xs-12">
      <h4>{{eveIns.name}}</h4>
{{!--       <div class="event-time">
          <h6 class="start-time">{{eveIns.startHour}}:{{eveIns.startMin}}</h6>
          <h6 class="end-time">{{eveIns.endHour}}:{{eveIns.endMin}}</h6>
      </div> --}}
      <div class="smile">
        <div class="dropdown">
          <button data-toggle="dropdown" class="btn-xs smile-face mood-display" data-identifier="{{eveIns._id}}" id="{{eveIns.mood}}">smile</button>
          <div class='dropdown-menu' role='menu' aria-labelledby='dLabel'>
            <ul class="mood-list">
              <li id="excited" class="smile-face mood-status">Excited</li>
              <li id="happy" class="smile-face mood-status">Happy</li>
              <li id='soso' class='smile-face mood-status'>Soso</li>
              <li id="sad" class="smile-face mood-status">Sad</li>
              <li id="angry" class="smile-face mood-status">Angry</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <hr>
    <div class="col-xs-6 alarm">
      <strong>Start: {{eveIns.startTime}}</strong>
    </div>
    <div class="col-xs-6 repeat">
      <strong>End: {{eveIns.endTime}}</strong>
    </div>
    <div class="col-xs-12 note">
      <label for='disabledInput'>Notes:</label>
      <div class="note-content">{{eveIns.note}}</div>
    </div>
    <div class="col-xs-12 comment">
      <form method='post' action='/addComment' role='form'>
        
        <input type='hidden' name='event_id' value='{{eveIns._id}}'>
        <input type='hidden' name='goback' value='{{goback.link}}'>
        <div class='form-group'>
          <label for='comment-input'>Comments:</label>
          <textarea id='comment-input' type='text' name='comment' class='form-control' rows='3' placeholder="Write down your comments">{{eveIns.comment}}</textarea>
        </div>
        <div class='form-group'>
          <input type='submit' class='btn btn-primary' value='Save Comments'>
        </div>
      </form>
    </div>
    <div class="col-xs-12"> {{!-- take-photo"> --}}
      {{!-- <button type="button" class="btn btn-default camIcon"><span class="glyphicon glyphicon-star"></span></button> --}}
      <form method='post' action='/deleteEvent' role='form'>
        <input type='hidden' name='event_id' value='{{eveIns._id}}'>
        <input type='hidden' name='goback' value='{{goback.link}}'>
        <div class='form-group'>
          <input type='submit' class='btn btn-danger btn-block' value='Delete Event'>
        </div>
      </form>
    </div>
  </div>
  <script>
    $(document).ready(function() {
      // $('#delete-event-btn').popover();
    })
  </script>
</div>
